{
  "name": "oaktree",
  "version": "1.0.0",
  "description": "Visual editor for Endless Online pub files and GFX graphics",
  "main": "dist-electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npx tsc -p tsconfig.electron.json && vite & electron . --dev",
    "build": "npm run build:electron && npm run build:renderer && electron-builder",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:renderer": "vite build",
    "build:win": "npm run build:electron && npm run build:renderer && electron-builder --win",
    "build:mac": "npm run build:electron && npm run build:renderer && electron-builder --mac",
    "build:linux": "npm run build:electron && npm run build:renderer && electron-builder --linux",
    "vite": "vite"
  },
  "keywords": [
    "endless-online",
    "pub-editor",
    "item-editor"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^5.1.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1",
    "typescript": "^5.3.3",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.6",
    "@mui/material": "^5.15.6",
    "electron-store": "^8.1.0",
    "eolib": "^2.0.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "build": {
    "appId": "com.oaktree.app",
    "productName": "OakTree",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
