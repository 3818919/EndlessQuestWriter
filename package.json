{
  "name": "endless-quest-writer",
  "version": "1.2.0",
  "description": "Visual editor for Endless Online quest files",
  "main": "dist-electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npx tsc -p tsconfig.electron.json && concurrently \"vite\" \"electron . --dev\"",
    "build": "npm run build:electron && npm run build:renderer && electron-builder",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:renderer": "vite build",
    "build:win": "npm run build:electron && npm run build:renderer && electron-builder --win",
    "build:mac": "npm run build:electron && npm run build:renderer && electron-builder --mac",
    "build:linux": "npm run build:electron && npm run build:renderer && electron-builder --linux",
    "vite": "vite",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "keywords": [
    "endless-online",
    "quest-editor",
    "eqf"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.3.3",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@monaco-editor/react": "^4.7.0",
    "@mui/icons-material": "^5.15.6",
    "@mui/material": "^5.15.6",
    "@types/dagre": "^0.7.53",
    "@xyflow/react": "^12.10.0",
    "dagre": "^0.8.5",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "html-to-image": "^1.11.13",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "build": {
    "appId": "com.endless-quest-writer.app",
    "productName": "Endless Quest Writer",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "assets/**/*",
      "config/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "config",
        "to": "config",
        "filter": ["**/*"]
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "3818919",
      "repo": "EndlessQuestWriter"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "artifactName": "Endless.Quest.Writer-${version}.${ext}"
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Endless Quest Writer",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "Development",
      "artifactName": "Endless.Quest.Writer.Setup.${version}.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "artifactName": "Endless.Quest.Writer-${version}.${ext}"
    }
  }
}
