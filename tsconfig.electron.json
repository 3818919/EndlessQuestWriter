{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist-electron",
    "target": "ES2020",
    "lib": ["ES2020"],
    "jsx": "preserve"
  },
  "include": [
    "src/main.ts",
    "src/preload.ts",
    "src/gfx-loader.ts",
    "src/eif-parser.ts"
  ],
  "exclude": [
    "node_modules",
    "src/renderer",
    "src/animation"
  ]
}
